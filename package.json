{
  "name": "@inaiat/fastify-papr",
  "version": "3.0.0",
  "description": "Fastify Papr Plugin Integration",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "xo && ava",
    "build": "rimraf ./dist && mkdir dist && tsc --outDir dist && git rev-parse HEAD > BUILD_SHA",
    "lint": "xo --fix",
    "coverage": "xo && c8 ava",
    "prepublishOnly": "npm run build",
    "make-badges": "istanbul-badges-readme"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inaiat/fastify-papr.git"
  },
  "keywords": [
    "fastify",
    "mongodb",
    "papr",
    "database",
    "model",
    "schema",
    "json",
    "json-schema",
    "validation",
    "typescript",
    "types"
  ],
  "contributors": [
    "Inaiat <inaiat@gmail.com>",
    "Daniel Molina <dgmolina.ti@gmail.com>"
  ],
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "homepage": "https://github.com/inaiat/fastify-papr.git",
  "dependencies": {
    "fastify-plugin": "^4.5.0",
    "papr": "^11.1.0"
  },
  "peerDependencies": {
    "fastify": "^4.13.0",
    "mongodb": "^5.1.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.37",
    "@swc/helpers": "^0.4.14",
    "@types/node": "^18.14.2",
    "@types/semver": "^7.3.13",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "istanbul-badges-readme": "^1.8.5",
    "mongodb-memory-server": "^8.11.5",
    "rimraf": "^4.1.3",
    "semver": "^7.3.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "xo": "^0.53.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-functional": "4.4.1",
    "eslint-plugin-prettier": "4.2.1"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "test": "test"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "json-summary",
      "lcov"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "plugins": [
      "prettier",
      "functional",
      "unused-imports"
    ],
    "extends": [
      "plugin:functional/no-mutations",
      "plugin:functional/stylistic",
      "plugin:functional/no-exceptions",
      "plugin:functional/external-recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-array-method-this-argument": "off",
      "new-cap": "off",
      "import/no-extraneous-dependencies": "off",
      "@typescript-eslint/member-delimiter-style": "off",
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/consistent-type-imports": "off",
      "@typescript-eslint/consistent-type-definitions": "off",
      "@typescript-eslint/no-unsafe-assignment": "warn",
      "@typescript-eslint/no-empty-function": "warn",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/object-curly-spacing": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "unused-imports/no-unused-imports": "error",
      "functional/no-let": [
        "error",
        {
          "allowLocalMutation": true
        }
      ],
      "functional/no-method-signature": "off",
      "functional/prefer-readonly-type": "off"
    },
    "overrides": [
      {
        "files": "tests/**/*.ts",
        "rules": {
          "neverthrow/must-use-result": "off",
          "functional/no-method-signature": "off",
          "@typescript-eslint/prefer-readonly-parameter-types": "off",
          "@typescript-eslint/no-unsafe-assignment": "off",
          "functional/prefer-readonly-type": "off",
          "functional/immutable-data": "off",
          "ava/use-test": "off",
          "unicorn/no-await-expression-member": "off",
          "prefer-promise-reject-errors": "off"
        }
      }
    ]
  },
  "config": {
    "mongodbMemoryServer": {
      "debug": "0"
    }
  },
  "author": "inaiat@gmail.com"
}