{
  "name": "@inaiat/fastify-papr",
  "version": "1.0.0",
  "description": "Fastify Papr Plugin Integration",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "xo && ava",
    "build": "rimraf ./dist && mkdir dist && tsc --outDir dist && git rev-parse HEAD > BUILD_SHA",
    "lint": "xo --fix",
    "coverage": "xo && c8 ava",
    "prepublishOnly": "npm run build",
    "make-badges": "istanbul-badges-readme"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inaiat/fastify-papr.git"
  },
  "keywords": [
    "fastify",
    "mongodb",
    "papr",
    "database",
    "model",
    "schema",
    "json",
    "json-schema",
    "validation",
    "typescript",
    "types"
  ],
  "contributors": [
    "Inaiat <inaiat@gmail.com>",
    "Daniel Molina <dgmolina.ti@gmail.com>"
  ],
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "homepage": "https://github.com/inaiat/fastify-papr.git",
  "dependencies": {
    "fastify-plugin": "^4.2.1"
  },
  "peerDependencies": {
    "fastify": "^4.5.3",
    "mongodb": "^4.9.0",
    "papr": "^7.x"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.245",
    "@swc/helpers": "^0.4.11",
    "@types/node": "^18.7.14",
    "@types/semver": "^7.3.12",
    "ava": "^4.3.3",
    "c8": "^7.12.0",
    "mongodb-memory-server": "^8.8.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "xo": "^0.52.2",
    "istanbul-badges-readme": "^1.8.2"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "test": "test"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "json-summary",
      "lcov"
    ]
  },
  "xo": {
    "semicolon": false,
    "ignores": [
      "documentation/examples/*"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "n/no-deprecated-api": "off",
      "n/prefer-global/url": "off",
      "n/prefer-global/url-search-params": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "unicorn/prefer-node-protocol": "off",
      "ava/assertion-arguments": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/await-thenable": "off",
      "@typescript-eslint/no-redundant-type-constituents": "off",
      "no-lone-blocks": "off",
      "unicorn/no-await-expression-member": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/consistent-type-definitions": "off"
    }
  },
  "config": {
    "mongodbMemoryServer": {
      "debug": "0"
    }
  },
  "author": "inaiat@gmail.com"
}
